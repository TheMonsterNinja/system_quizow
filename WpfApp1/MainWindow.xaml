<Window x:Class="QuizWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prosty quiz" Height="350" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł quizu -->
            <RowDefinition Height="Auto"/>
            <!-- Przyciski -->
            <RowDefinition Height="Auto"/>
            <!-- Szukaj -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Tytuł quizu:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="PoleTytulQuizu" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="Dodaj quiz" Width="100" Margin="0,0,10,0"
            Click="PrzyciskDodaj_Click"/>
            <Button Content="Odśwież listę" Width="100" Margin="0,0,10,0"
            Click="PrzyciskOdswiez_Click"/>
            <Button Content="Zapisz zmiany" Width="120" Margin="0,0,10,0"
            Click="PrzyciskZapiszZmiany_Click"/>
            <Button Content="Usuń zaznaczony" Width="120"
            Click="PrzyciskUsun_Click"/>
        </StackPanel>

        <!-- NOWY WIERSZ: SZUKAJ -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="PoleSzukaj" Width="250"
                     TextChanged="PoleSzukaj_TextChanged"/>
        </StackPanel>


        <ListBox x:Name="ListaQuizow"
         Grid.Row="3"
         DisplayMemberPath="Tytul"
         SelectionChanged="ListaQuizow_SelectionChanged" />

    </Grid>
</Window>
